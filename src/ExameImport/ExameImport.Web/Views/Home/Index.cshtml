@model ExameImport.Web.ViewModels.ImportViewModel
@{
    ViewData["Title"] = "Import Ofx";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h3>Import your OFX here</h3>
            <form enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ArquivoUpload" class="control-label"></label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ArquivoUpload" accept=".ofx" multiple asp-for="ArquivoUpload" />
                        <label data-browse="Procurar" style="width:400px" class="custom-file-label" for="ArquivoUpload"></label>
                        <label style="display:none" id="img_nome"></label>
                    </div>
                    <span asp-validation-for="ArquivoUpload" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />                    
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $("#ArquivoUpload").change(function () {
            var arquivos = "";
            for (var i = 0; i < this.files.length; i++) {
                arquivos += (i+1 < this.files.length) ? this.files[i].name + ", " : this.files[i].name;
            }      
            $("#img_nome").text(arquivos);
            $("#img_nome")[0].style.display = 'block';
            
        });         
    </script>
}